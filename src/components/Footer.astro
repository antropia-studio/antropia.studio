---
import antropiaLogo from '../assets/logo.svg';
import antropiaLogoDark from '../assets/logo-neg.svg';

interface Props {
  isDark?: boolean;
}

const { isDark } = Astro.props;

---

<footer class="mt-32 flex flex-col items-center gap-6">
  <p class={`text-center text-sm ${isDark ? 'text-alucards-night/60' : 'text-white/60'}`}>
    We collect aggregate and anonymous analytics.<br />For the sake of
    transparency, you can see the dashboard <a
    href="https://antropiastudio.pirsch.io" class={`underline ${isDark ? 'text-alucards-night' : 'text-white'}`}>here</a
  >.
  </p>

  <div class="flex flex-row gap-4 items-center">
    <a href="https://bsky.app/profile/antropia.bsky.social"
       target="_blank">
      <svg role="img" viewBox="0 0 24 24"
           xmlns="http://www.w3.org/2000/svg"
           class={`size-6 ${isDark ? 'text-alucards-night hover:text-blinking-blue' : 'text-white hover:text-hello-summer'}`}>
        <title>Bluesky</title>
        <path fill="currentColor"
              d="M12 10.8c-1.087-2.114-4.046-6.053-6.798-7.995C2.566.944 1.561 1.266.902 1.565.139 1.908 0 3.08 0 3.768c0 .69.378 5.65.624 6.479.815 2.736 3.713 3.66 6.383 3.364.136-.02.275-.039.415-.056-.138.022-.276.04-.415.056-3.912.58-7.387 2.005-2.83 7.078 5.013 5.19 6.87-1.113 7.823-4.308.953 3.195 2.05 9.271 7.733 4.308 4.267-4.308 1.172-6.498-2.74-7.078a8.741 8.741 0 0 1-.415-.056c.14.017.279.036.415.056 2.67.297 5.568-.628 6.383-3.364.246-.828.624-5.79.624-6.478 0-.69-.139-1.861-.902-2.206-.659-.298-1.664-.62-4.3 1.24C16.046 4.748 13.087 8.687 12 10.8Z" />
      </svg>
    </a>

    <a href="https://github.com/orgs/antropia-studio/" target="_blank">
      <svg role="img" viewBox="0 0 24 24"
           xmlns="http://www.w3.org/2000/svg"
           class={`size-6 ${isDark ? 'text-alucards-night hover:text-blinking-blue' : 'text-white hover:text-hello-summer'}`}><title>
        GitHub</title>
        <path fill="currentColor"
              d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12" />
      </svg>
    </a>

    <a href="https://www.linkedin.com/company/antropia-studio/"
       target="_blank">
      <svg role="img" xmlns="http://www.w3.org/2000/svg"
           class={`size-7 ${isDark ? 'text-alucards-night hover:text-blinking-blue' : 'text-white hover:text-hello-summer'}`}
           viewBox="0 0 50 50"><title>LinkedIn</title>
        <path fill="currentColor"
              d="M41,4H9C6.24,4,4,6.24,4,9v32c0,2.76,2.24,5,5,5h32c2.76,0,5-2.24,5-5V9C46,6.24,43.76,4,41,4z M17,20v19h-6V20H17z M11,14.47c0-1.4,1.2-2.47,3-2.47s2.93,1.07,3,2.47c0,1.4-1.12,2.53-3,2.53C12.2,17,11,15.87,11,14.47z M39,39h-6c0,0,0-9.26,0-10 c0-2-1-4-3.5-4.04h-0.08C27,24.96,26,27.02,26,29c0,0.91,0,10,0,10h-6V20h6v2.56c0,0,1.93-2.56,5.81-2.56 c3.97,0,7.19,2.73,7.19,8.26V39z"></path>
      </svg>
    </a>
  </div>

  <div class="flex flex-col items-center gap-2 xl:flex-row xl:gap-4">
    <img src={isDark ? antropiaLogoDark.src : antropiaLogo.src} width="100" alt="Antropia Homepage" />
    <span class={`text-xs xl:text-sm ${isDark ? "text-alucards-night" : "text-white"}`}>@2025 Antropia Studio</span>
  </div>
</footer>
