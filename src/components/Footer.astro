  <div class="flex flex-col items-center gap-2 xl:flex-row xl:gap-4">
    <img src={isDark ? antropiaLogoDark.src : antropiaLogo.src} width="100"
         alt="Antropia Homepage" />
    <span
      class={`text-xs xl:text-sm ${isDark ? 'text-alucards-night' : 'text-white'}`}>@2025 Antropia Studio</span>
  </div>
