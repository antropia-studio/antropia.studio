---
const { class: className, ...rest } = Astro.props;
---

<div class={`separator ${className}`} {...rest}></div>

<div class="flex flex-col gap-10 px-5 py-10 xl:flex-row xl:px-10 xl:py-20">
  <div class="flex flex-1 flex-col">
    <slot name="first" />
  </div>
  <div class="flex flex-1 flex-col">
    <slot name="second" />
  </div>
  <div class="flex flex-1 flex-col">
    <slot name="third" />
  </div>
</div>

<div class={`separator mt-0 ${className}`} {...rest}></div>
