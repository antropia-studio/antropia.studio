---
const { class: className, ...rest } = Astro.props;
---

<div class={`separator ${className}`} {...rest} />

<div class="flex flex-col xl:flex-row gap-10 px-5 py-10 xl:px-10 xl:py-20">
  <div class="flex flex-col flex-1">
    <slot name="first" />
  </div>
  <div class="flex flex-col flex-1">
    <slot name="second" />
  </div>
  <div class="flex flex-col flex-1">
    <slot name="third" />
  </div>
</div>

<div class={`separator mt-0 ${className}`} {...rest} />
