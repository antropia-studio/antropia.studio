{
  "name": "personal",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "astro": "astro",
    "build": "astro build",
    "dev": "astro dev",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "preview": "astro preview",
    "release": "release-it"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.3",
    "astro": "^5.6.1",
    "tailwindcss": "^4.1.3"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.24.0",
    "@release-it/conventional-changelog": "^10.0.0",
    "@typescript-eslint/parser": "^8.29.1",
    "commitlint": "^19.8.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-prettier": "^5.2.6",
    "lefthook": "^1.11.9",
    "prettier": "^3.5.3",
    "release-it": "^18.1.2"
  },
  "packageManager": "pnpm@10.8.0",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "lefthook"
    ]
  }
}
